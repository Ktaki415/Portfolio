<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>新しい投稿</h2>
		<%= render 'posts/newform', post: @post_new %>

	</div>

	<div class="col-xs-9">
		<h2>投稿一覧</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>タイトル</th>
					<th>内容</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td>
						<%= link_to user_path(post.user) do %>
						<%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
					<td><%= post.body %></td>

					<!-- いいね機能 -->
					<td>
						<div id="favorites_buttons_<%= post.id %>">
							<%= render 'favorites/favorite', post: post %>
						</div>
					</td>
					<td>コメント数:<%= post.post_comments.count %></td>

					<!-- タグ機能 -->
					<td><%= render partial: 'posts/tag_list', locals: { tag_lists: post.tag_list } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>