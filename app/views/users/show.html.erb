<div class="row">
	<div class="col-xs-3">
		<h3>User info</h3>
		<%= render 'users/profile', user: @user %>

		<h3>New Form</h3>
		<%= render 'posts/newform', post: @post_new %>
	</div>
	<div class="col-xs-9">
		<h2>投稿記事</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>投稿日時</th>
					<th>タイトル</th>
					<th>内容</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td>
						<%= link_to user_path(post.user) do %>
						<%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= post.start_time.strftime("%Y-%m-%d %H:%M") %></td>
					<td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
					<td><%= post.body %></td>
					<td>コメント数:<%= post.post_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<div class="pages text-center"><%= paginate(@posts) %></div>

		<div class="calendar">
			<%= month_calendar events: @posts do |date, posts| %>
				<%= date.day %>
				<% posts.each do |post| %>
					<div>
						<%= link_to post.title, post %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>